@{
    PageData["title"] = "AngularJS SPA | Register";
}
<div class="row">
    <form class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4" ng-submit="register()">
        <h2 class="text-center">Register</h2>
        <div class="form-box">
            <div class="form-group">
                <input ng-model="user.Name" type="text" class="form-control" placeholder="Name" required autofocus />
            </div>
            <div class="form-group">
                <input ng-model="user.Email" type="email" class="form-control" placeholder="Username or Email" required autofocus />
            </div>
            <div class="form-group">
                <input ng-model="user.Password" type="password" class="form-control" placeholder="Password" required />
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Register</button>
            </div>
        </div>
    </form>
</div>