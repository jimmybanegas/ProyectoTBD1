<div class="jumbotron jumbotron-sm">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-lg-12">
                <h1 class="h1">
                    SportLiga <small>Editar Liga</small>
                </h1>
            </div>
        </div>
    </div>
</div>

<div class="container" >
    <div class="row clearfix">
        <div class="col-md-4 column">
        </div>
        <div class="col-md-4 column">
            <form role="form" ng-submit="finishEditingLeague()">
                <div class=" form-group">
                    <label>ID de liga</label>
                    <input ng-model="EditLeague.Id" type="text" class="form-control" placeholder="ID de la liga" required disabled/>
                </div>
                <div class="form-group">
                    <label>Nombre de la liga</label>
                    <input ng-model="EditLeague.NombreLiga" type="text" class="form-control" placeholder="Nombre de liga" required />
                </div>
                <div class="form-group">
                    <label>País</label>
                    <input ng-model="EditLeague.PaisLiga" type="text" class="form-control" placeholder="País" required />
                </div>
                <div class="form-group">
                    <label>Cantidad de equipo</label>
                    <input ng-model="EditLeague.CantEquipos" type="text" class="form-control" placeholder="Cantidad de equipos" required />
                </div>
                <div class="form-group">
                    <label>Sitio web</label>
                    <input ng-model="EditLeague.SitioWeb" type="text" class="form-control" placeholder="Sitio web" required />
                </div>
                <div class="form-group">
                    <label>Logo</label>
                    <input ng-model="EditLeague.Logo" type="file" id="exampleInputFile" />
                    <p class="help-block">
                        Escoger el logo de la liga
                    </p>
                </div>
                <div class="checkbox">
                    <label><input type="checkbox" ng-model="EditLeague.IsArchived" />Archivada</label>
                </div>
                <button type="submit" class="btn btn-default" ng-click="go('/profile')">Guardar</button>
                <a class="btn btn-default" href="/profile">Regresar</a>
            </form>
        </div>
        <div class="col-md-4 column">
        </div>
    </div>
</div>